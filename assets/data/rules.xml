<!-- 
	All grid spaces are either water or land terrain. 
	Many objects can only exist on one type of terrain.
-->
<rules>
	<object type="any"/>

	<object type="clear">
		<click terrain="land" result="meteor" message="Dropping a meteor" />
		<trigger terrain="water" neighbor="lava" min="3" max="8" result="steam" message="Some water evaporates into steam"/>
		<trigger terrain="any" neighbor="meteor" chance="0.8" min="1" result="mineral" message="A meteor spreads minerals"/>
		<trigger terrain="land" neighbor="algae" min="2" max="8" result="plant" message="A plant grows from nearby algae"/>
	</object>
	<object type="lava">
		<click result="clear" message="Cooling some lava"/>
	</object>
	<object type="steam">
		<click result="clear" message="Cooling some water"/>
		<trigger neighbor="lava" min="0" max="2" result="clear" message="Some steam cools into water"/>
	</object>
 	<object type="cells">
		<click result="algae" message="Growing algae"/>
	</object>
	<object type="meteor">
		<click result="mineral" message="A meteor crumbles to dust"/>
	</object>
	<object type="mineral"> 
		<click terrain="water" result="cells" message="Growing cells"/>
		<trigger terrain="land" result="clear" message="Dry minerals turn into dust"/>
	</object>
